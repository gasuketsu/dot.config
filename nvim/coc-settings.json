{
    "python": {
        "formatting": {
            "provider": "black"
        },
        "analysis": {
            "diagnosticPublishDelay": 500
        }
    },
    "golang": {
        "command": "gopls",
        "args": ["--diagnostics-style=instant"],
        "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
        "filetypes": ["go"]
    }
}
