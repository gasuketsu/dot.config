[init]
	defaultBranch = main
[push]
	default = simple
[pull]
	rebase = false
[alias]
	glog = log --graph --decorate --date=iso
	root = rev-parse --show-toplevel
[mergetool]
	prompt = false
[mergetool "nvim"]
	cmd = nvim -f -c \"DiffviewOpen\"
[merge]
	tool = nvim
[difftool]
	prompt = true
[difftool "nvim"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = nvim
