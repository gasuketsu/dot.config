[init]
	defaultBranch = main
[core]
	pager = bat -p
[push]
	default = simple
[pull]
	rebase = false
[alias]
	glog = log --graph --decorate --date=iso
	root = rev-parse --show-toplevel
[mergetool]
	prompt = false
[mergetool "nvim"]
	cmd = nvim -f -c \"DiffviewOpen\"
[merge]
	tool = nvim
[difftool "nvim"]
	cmd = nvim -c \"DiffviewOpen\"
[diff]
	tool = nvim
